# Get required libraries
sudo apt-get install libboost-dev libboost-thread-dev libfreetype6-dev libexpat1-dev libgtk2.0-dev

# Get git + svn support if needed
sudo apt-get install cmake git git-svn 

# Create development folder
mkdir ~/hpcc_git
cd ~/hpcc_git

# Get Firebreath library
git clone https://GordonSmith@github.com/GordonSmith/FireBreath-1.git
cd FireBreath-1
git checkout firebreath-1.5
cd ..

# Get unrestricted (2.4) agg libraries
git svn clone https://agg.svn.sourceforge.net/svnroot/agg

# Get AT&T Graphviz libraries
wget http://www.graphviz.org/pub/graphviz/stable/SOURCES/graphviz-2.26.3.tar.gz
tar xf graphviz-2.26.3.tar.gz
cd graphviz-2.26.3
./configure
# edit config.h and comment out the following line (or set to 0):
#define ENABLE_LTDL 1
cd ..

# Create general build folder.
mkdir build
cd build

# Create build folder for GraphControl.
mkdir GraphControl
cd GraphControl

# Generate make files.
cmake -DGRAPHVIZSRC_DIR=../../graphviz-2.26.3/ -DAGGSRC_DIR=../../agg/ -DFIREBREATHSRC_DIR=../../FireBreath-1/  ../../GraphControl/

# make graphcontrol directly into /usr/lib/mozilla/plugins
sudo make

